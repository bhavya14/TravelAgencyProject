        <h3>Bus details</h3>
        <table cellpadding="10">
            <tr>
                <td></td>
                <td> Bus number </td>
                <td> Departure from</td>
                <td> Arrival At</td>
                <td> Date and Time of Departure </td>
                <td> Duration </td>
            </tr>
            <tr>
                <td><b> Onward Journey </b></td>
                <td> <%= Details.Bus_number%></td>
                <td><%= Details.BusStop_start%></td>
                <td><%= Details.BusStop_reach%></td>
                <td><%= Details.Start_date%></td>
                <td><%= Details.Duration%></td>
            </tr>
            <% if(ReturnDetails != undefined){ %>
            <tr>
                <td><b>Return Journey</b></td>
