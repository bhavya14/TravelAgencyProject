    <div style="border: solid ; border-color: beige ;padding: 10% ;margin-left: 10%; float: left">
        <table cellpadding="10">
            <tr>
                <td> Bid </td>
                <td> Source</td>
                <td> Destination</td>
                <td> Date</td>
            </tr>
            <tr>
               <td> <%= Bid%></td>
                <td><%= data.source%><%= data.travel_from%></td>
                <td><%= data.dest%><%= data.travel_to%></td>
                <td><%= data.startDate%><%= data.Start_Date%></td>
            </tr>
        </table>
        <% if(data.travelMode == 1){ %>
             <h3>Flight details</h3>
        <table cellpadding="10">
            <tr>
                <td></td>
                <td> Flight number </td>
                <td> Departure from</td>
                <td> Arrival At</td>
                <td> Date and Time of Departure </td>
                <td> Duration </td>
            </tr>
            <tr>
                <td><b> Onward Journey </b></td>
                <td> <%= Details.Flight_Number%></td>
                <td><%= Details.Airport_start%></td>
                <td><%= Details.Airport_land%></td>
                <td><%= Details.Start_date%></td>
                <td><%= Details.Duration%></td>
            </tr>
            <tr>
                <% if(ReturnDetails != undefined){ %>
                <td><b>Return Journey</b></td>
                <td> <%= ReturnDetails.Flight_Number%></td>
                <td><%= ReturnDetails.Airport_start%></td>
                <td><%= ReturnDetails.Airport_land%></td>
                <td><%= ReturnDetails.Start_date%></td>
                <td><%= ReturnDetails.Duration%></td>
            </tr>
            <%}%>
        </table>
        <% }%>

        <% if(data.travelMode == 2){ %>
        <h3>Train details</h3>
        <table cellpadding="10">
            <tr>
                <td></td>
                <td> Train number </td>
                <td> Departure from</td>
                <td> Arrival At</td>
                <td> Date and Time of Departure </td>
                <td> Duration </td>
            </tr>
            <tr>
                <td><b> Onward Journey </b></td>
                <td><%= Details.Train_Number%></td>
                <td><%= Details.RailwayStation_start%></td>
                <td><%= Details.RailwayStation_reach%></td>
                <td><%= Details.Start_date%></td>
                <td><%= Details.Duration%></td>
            </tr>
            <% if(ReturnDetails != undefined){ %>
            <tr>
                <td><b>Return Journey</b></td>
                <td> <%= ReturnDetails.Train_Number%></td>
                <td><%= ReturnDetails.RailwayStation_start%></td>
                <td><%= ReturnDetails.RailwayStation_reach%></td>
                <td><%= ReturnDetails.Start_date%></td>
                <td><%= ReturnDetails.Duration%></td>
            </tr>
            <%}%>
        </table>
        <% }%>

